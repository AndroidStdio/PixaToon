<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajscape.pixatoon.viewer.camera.CameraActivity">

    <LinearLayout
        android:id="@+id/filterViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/openPictureBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/picture_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/selectFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/filters_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/openCameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/switch_camera_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/configFilterBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settings_icon"
            android:scaleType="fitCenter"
            android:background="@drawable/rect_btn"
            android:padding="10dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/viewerActionBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_btn"
        android:src="@drawable/camera_icon"
        android:scaleType="fitCenter"
        android:padding="17dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/menuBtnPanel"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:id="@+id/filterSelectorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterConfigPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/menuBtnPanel">
    </LinearLayout>

</RelativeLayout>
