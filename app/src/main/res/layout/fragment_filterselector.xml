<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajscape.pixatoon.fragments.FilterFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:id="@+id/colorCartoonFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Color Cartoon" />
                <Button
                    android:id="@+id/grayCartoonFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Gray Cartoon" />
                <Button
                    android:id="@+id/graySketchFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Gray Sketch" />
                <Button
                    android:id="@+id/pencilSketchFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Pencil Sketch" />
                <Button
                    android:id="@+id/oilPaintFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Oil Paint" />
                <Button
                    android:id="@+id/waterColorFilterBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Water Color" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>
