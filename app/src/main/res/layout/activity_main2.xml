<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajscape.pixatoon.viewer.camera.CameraActivity">

    <LinearLayout
        android:id="@+id/filterViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

    <ImageButton
        android:id="@+id/openPictureBtn"
        android:layout_width="@dimen/button2_size"
        android:layout_height="@dimen/button2_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/round_btn"
        android:padding="@dimen/button2_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/picture_icon"/>
        <!--android:background="#00000000"-->
        <!--android:src="@drawable/image"-->
        <!--android:scaleType="fitCenter"/>-->

    <ImageButton
        android:id="@+id/viewerActionBtn"
        android:layout_width="@dimen/button1_size"
        android:layout_height="@dimen/button1_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/round_btn2"
        android:padding="@dimen/button1_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/camera_icon"/>
    <!--android:background="#00000000"-->
    <!--android:src="@drawable/aperture"-->
    <!--android:scaleType="fitCenter"/>-->

    <ImageButton
        android:id="@+id/openCameraBtn"
        android:layout_width="@dimen/button2_size"
        android:layout_height="@dimen/button2_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/round_btn"
        android:padding="@dimen/button2_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/switch_camera_icon" />
        <!--android:background="#00000000"-->
        <!--android:src="@drawable/camera"-->
        <!--android:scaleType="fitCenter"/>-->

    <ImageButton
        android:id="@+id/selectFilterBtn"
        android:layout_width="@dimen/button2_size"
        android:layout_height="@dimen/button2_size"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/filterSelectorPanel"
        android:background="@drawable/round_btn"
        android:src="@drawable/filters_icon"
        android:scaleType="fitCenter"
        android:padding="@dimen/button2_padding"/>
        <!--android:background="#00000000"-->
        <!--android:src="@drawable/magicwand"-->
        <!--android:scaleType="fitCenter"/>-->

    <ImageButton
        android:id="@+id/configFilterBtn"
        android:layout_width="@dimen/button2_size"
        android:layout_height="@dimen/button2_size"
        android:layout_below="@id/selectFilterBtn"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/round_btn"
        android:padding="@dimen/button2_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/settings_icon" />
    <!--android:background="#00000000"-->
    <!--android:src="@drawable/settings"-->
    <!--android:scaleType="fitCenter"/>-->

    <LinearLayout
        android:id="@+id/filterSelectorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterConfigPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/viewerActionBtn"
        android:layout_margin="20dp">
    </LinearLayout>
</RelativeLayout>
