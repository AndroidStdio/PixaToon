<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajscape.pixatoon.viewer.camera.CameraActivity">

    <com.ajscape.pixatoon.viewer.camera.OpenCvCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/camView"
        app:show_fps="true"
        app:camera_id="any" />

    <LinearLayout
        android:id="@+id/camBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/picture_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:onClick="pickImage"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/filters_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:onClick="showFilterSelector"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/switch_camera_icon"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/settings_icon"
            android:scaleType="fitCenter"
            android:background="@drawable/rect_btn"
            android:padding="10dp"
            android:onClick="showFilterConfig"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_btn"
        android:src="@drawable/camera_icon"
        android:scaleType="fitCenter"
        android:padding="17dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/camBtnPanel"
        android:layout_marginBottom="15dp"
        android:onClick="takePicture"/>

    <LinearLayout
        android:id="@+id/camFilterSelectorPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camFilterConfigPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/camBtnPanel">
    </LinearLayout>

</RelativeLayout>
